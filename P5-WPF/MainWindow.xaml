<Window ResizeMode="NoResize" x:Class="P5_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P5_WPF" xmlns:local1="clr-namespace:P5_WPF.ViewModels" xmlns:d3="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="Novefa Observeringssystem" Height="450" Width="800">



    <Grid Margin="0,-2,-8,-19">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding activeBatches}" x:Name="batcheslist"  Margin="120,93,91,70" Grid.ColumnSpan="2" MouseDoubleClick="batchesList_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BatchID}" Header="Batch ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Temperatur_Celsius}" Header="Current temperature (in Celsius)" Width="180"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Luftfugtighed_Procent}" Header="Current humidity (in %)" Width="160"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Tidspunkt}" Header="Timestamp" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView ItemsSource="{Binding archivedBatches}" x:Name="archivedbatcheslist"  Margin="120,93,91,70" Grid.ColumnSpan="2" MouseDoubleClick="archivedbatchesList_MouseDoubleClick" Visibility="Hidden" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BatchID}" Header="Batch ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Temperatur_Celsius}" Header="Current temperature (in Celsius)" Width="180"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Luftfugtighed_Procent}" Header="Current humidity (in %)" Width="160"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Tidspunkt}" Header="Timestamp" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Background="{Binding dbConnectionColor}" Margin="188,404,16,22" Grid.Column="1"></Label>
        <Label FontSize="7" Margin="114,396,23,0" Grid.Column="1" Height="18" VerticalAlignment="Top" Content="DB Connection Status"/>
        <Label FontSize="20" FontWeight="Bold" Background="GhostWhite" Margin="282,19,62,380" Name="activetext">
            Batches in production
        </Label>

        <Label FontSize="20" FontWeight="Bold" Background="GhostWhite" Margin="282,23,62,366" Name="archivetext" Visibility="Hidden">
            Archived Batches
        </Label>

        <Button Click="RefreshTable" HorizontalAlignment="Center"  FontWeight="Bold" Margin="256,377,175,26" Width="152"  Name="refreshTable_button">
            <WrapPanel>
                <TextBlock>Refresh table</TextBlock>
            </WrapPanel>
        </Button>

        <Button Click="Batch_Click" HorizontalAlignment="Center"  FontWeight="Bold" Margin="71,377,360,26" Width="152"  Name="Batch_click_button">
            <WrapPanel>
                <TextBlock>Batch mangement</TextBlock>
            </WrapPanel>
        </Button>

        <Image Source="/Images/Novefa_Logo.PNG" Margin="10,-58,374,324" />
        <Label Margin="427,377,10,31">Time of last refresh :</Label>
        <TextBlock x:Name="TimerDisplay" Margin="543,382,49,33" Grid.ColumnSpan="2"></TextBlock>
        <Button Click="NotVisible_Click" HorizontalAlignment="Center" FontWeight="Bold" Margin="10,24,37,380" Width="172" Name="archive_button" Grid.Column="1">
            <WrapPanel>
                <TextBlock><Run Text="Show archived batches"/></TextBlock>
            </WrapPanel>
        </Button>
        <Button HorizontalAlignment="Center" Visibility="Hidden" FontWeight="Bold" Margin="10,24,37,380" Width="172" Click="Visible_Click" Name="active_button" Grid.Column="1">
            <WrapPanel>
                <TextBlock><Run Text="Show active Batches"/></TextBlock>
            </WrapPanel>
        </Button>


    </Grid>


</Window>
