<Window ResizeMode="NoResize" x:Class="P5_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P5_WPF" xmlns:local1="clr-namespace:P5_WPF.ViewModels" xmlns:d3="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="Novefa Observeringssystem" Height="450" Width="800">


    <Grid Margin="0,0,-8,-21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Background="Red" Grid.ColumnSpan="2" Margin="0,0,10,392">
            <TextBlock Text="Header"/>
        </Border>


        <!-- Body -->
        <ContentPresenter Grid.ColumnSpan="2" Margin="0,67,10,118"/>

        <!-- Footer -->
        <Border Background="grey" Grid.ColumnSpan="2" Margin="0,366,10,18">
            <TextBlock Text="Footer" Margin="10,429,-207,-97"/>
        </Border>


        <ListView ItemsSource="{Binding activeBatches}" x:Name="batcheslist"  Margin="201,76,10,87" Grid.ColumnSpan="2" MouseDoubleClick="batchesList_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BatchID}" Header="Batch ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Temperatur_Celsius}" Header="Current temperature (in Celsius)" Width="180"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Luftfugtighed_Procent}" Header="Current humidity (in %)" Width="160"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Tidspunkt}" Header="Timestamp" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView ItemsSource="{Binding archivedBatches}" x:Name="archivedbatcheslist"  Margin="120,93,91,70" Grid.ColumnSpan="2" MouseDoubleClick="archivedbatchesList_MouseDoubleClick" Visibility="Hidden" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BatchID}" Header="Batch ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Temperatur_Celsius}" Header="Current temperature (in Celsius)" Width="180"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Luftfugtighed_Procent}" Header="Current humidity (in %)" Width="160"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Tidspunkt}" Header="Timestamp" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Background="{Binding dbConnectionColor}" Margin="184,395,19,31" Grid.Column="1" RenderTransformOrigin="-14.354,7.208"></Label>
        <Label FontSize="7" Margin="97,382,40,0" Height="18" VerticalAlignment="Top" Content="DB Connection Status" Grid.Column="1"/>
        <Label FontSize="20" FontWeight="Bold" Background="GhostWhite" Margin="282,7,62,392" Name="activetext">
            Batches in production
        </Label>

        <Label FontSize="20" FontWeight="Bold" Background="GhostWhite" Margin="282,23,62,366" Name="archivetext" Visibility="Hidden">
            Archived Batches
        </Label>

        <Button Click="RefreshTable" HorizontalAlignment="Center"  FontWeight="Bold" Margin="0,225,431,178" Width="152"  Name="refreshTable_button">
            <WrapPanel>
                <TextBlock>Refresh table</TextBlock>
            </WrapPanel>
        </Button>

        <Button Click="Batch_Click" HorizontalAlignment="Center"  FontWeight="Bold" Margin="10,171,421,232" Width="152"  Name="Batch_click_button">
            <WrapPanel>
                <TextBlock>Batch mangement</TextBlock>
            </WrapPanel>
        </Button>

        <Image Source="/Images/Novefa_Logo.PNG" Margin="10,-61,374,327" />
        <Label Margin="0,377,437,31">Time of last refresh :</Label>
        <TextBlock x:Name="TimerDisplay" Margin="120,377,253,38"/>
        <Button Click="NotVisible_Click" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,115,411,289" Width="172" Name="archive_button">
            <WrapPanel>
                <TextBlock><Run Text="Show archived batches"/></TextBlock>
            </WrapPanel>
        </Button>
        <Button HorizontalAlignment="Center" Visibility="Hidden" FontWeight="Bold" Margin="10,24,37,380" Width="172" Click="Visible_Click" Name="active_button" Grid.Column="1">
            <WrapPanel>
                <TextBlock><Run Text="Show active Batches"/></TextBlock>
            </WrapPanel>
        </Button>


    </Grid>


</Window>
