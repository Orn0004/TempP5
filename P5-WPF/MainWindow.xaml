<Window x:Class="P5_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P5_WPF" xmlns:local1="clr-namespace:P5_WPF.ViewModels" xmlns:d3="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="{Binding Path=myTitle}" Height="450" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding allBatches}" x:Name="batcheslist"  Margin="109,100,105,63" Grid.ColumnSpan="2" MouseDoubleClick="batchesList_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BatchID}" Header="Batch ID" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Temperatur_Celsius}" Header="Latest temperature meassured" Width="180"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Luftfugtighed_Procent}" Header="Latest humidity meassured" Width="170"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Tidspunkt}" Header="Date meassured" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,66,425,306" HorizontalAlignment="Right" Width="40">
            Filter:
        </Label>
        <TextBox
            Margin="156,69,172,324"
            VerticalAlignment="Center"
            Text="{Binding Path=FilterText, UpdateSourceTrigger=PropertyChanged}" Height="26" />
        <Button Click="RefreshTable" HorizontalAlignment="Center"  FontWeight="Bold" Margin="40,373,425,10" Width="111"  Name="tables_button">
            <WrapPanel>
                <TextBlock>Refresh Batches</TextBlock>
            </WrapPanel>
        </Button>

        <Image Source="/Images/Novefa_Logo.PNG" Margin="266,-49,80,306" />
        <!--<Button Click="BatchInfo" HorizontalAlignment="Center"  Background="CadetBlue" Foreground="PaleGreen" FontSize="20" FontWeight="Bold" Margin="558,357,21,17" Width="213" Name="test_button" Grid.ColumnSpan="2">
            <WrapPanel>
                <TextBlock><Run Text="Næste hyldeposition"/></TextBlock>
            </WrapPanel>
        </Button>-->
        <!--<Button HorizontalAlignment="Center" Visibility="Hidden" Background="CadetBlue" Foreground="Orange" FontSize="20" FontWeight="Bold" Margin="27,343,336.347,31" Width="213" Click="back_button_Click" Name="back_button">
            <WrapPanel>
                <TextBlock><Run Text="TEST"/></TextBlock>
            </WrapPanel>
        </Button>-->


    </Grid>


</Window>
